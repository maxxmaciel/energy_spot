export const useCreatePromotion = (CodCliente: number, NmCampanha: string, TxDesc: string, TxDescCompleta: string,Config: Configuracao[],
    Cliente: string, FlagPromocao = true, FlagObrigatoria = false, FlagPromocaoExclusiva = false, FlagHorarioFixo = false) => {
    //Config/Campanha.vtt
    return useFetchData<VTT.ResponseEXT<null>>(`Config/Campanha.vtt?`, 'POST', {
        action: 'insert',
        Configs: Config,
        CodCampanha: "",
        FlagPromocao: FlagPromocao,
        FlagAtiva: "",
        CodCliente: CodCliente,
        NmCampanha: NmCampanha,
        TxDesc: TxDesc,
        TxDescCompleta: TxDescCompleta,
        Cliente: Cliente,
        CapaResumida: '',
        CapaCompleta: '',
        FlagObrigatoria: FlagObrigatoria,
        FlagPromocaoExclusiva: FlagPromocaoExclusiva,
        FlagHorarioFixo: FlagHorarioFixo
    });
}

export const useAprovarConfig = (CodConfig: number) => {
    return useFetchData<VTT.ResponseEXT<null>>(`Config/Config.vtt?`, 'POST', {
        action: 'aprovar',
        CodConfig: CodConfig
    });
}


export const useUpdateConfig = (CodConfig: number, Config: Configuracao, Machine: CodMaquina[], Conf_Name: string) => {
    return useFetchData<VTT.ResponseEXT<null>>(`Config/Config.vtt?`, 'POST', {
        action: 'update',
        CodConfig: CodConfig,
        Configuracao: Config,
        Maquinas: Machine,
        Config: Conf_Name
    });
}

