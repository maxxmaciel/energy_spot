import { Box, Button, FormControl, InputLabel, MenuItem, Select, SelectChangeEvent, TextField, Typography } from '@mui/material';
import React, { useState } from 'react';

interface VeiculoData {
    tipo_veiculo: string;
    marca: string;
    modelo: string;
    ano_fabricacao: string;
    ano_modelo: string;
    cor: string;
    chassi: string;
    renavam: string;
    pais: string;
    uf: string;
    cidade: string;
}

const NewVeiculoForm: React.FC = () => {
    const [veiculo, setVeiculo] = useState<VeiculoData>({
        tipo_veiculo: '',
        marca: '',
        modelo: '',
        ano_fabricacao: '',
        ano_modelo: '',
        cor: '',
        chassi: '',
        renavam: '',
        pais: '',
        uf: '',
        cidade: ''
    });

    const handleInputChange = (e: React.ChangeEvent<HTMLInputElement>) => {
        const { name, value } = e.target;
        setVeiculo({ ...veiculo, [name]: value });
    };

    const handleSelectChange = (e: SelectChangeEvent<string>) => {
        const { name, value } = e.target;
        setVeiculo({ ...veiculo, [name as string]: value });
    };

    const handleSubmit = (e: React.FormEvent) => {
        e.preventDefault();
        // Lógica de submissão
        console.log(veiculo);
    };

    return (
        <Box 
            sx={{ 
                display: 'flex', 
                flexDirection: 'column', 
                gap: 2, 
                maxWidth: 600, 
                margin: 'auto',
                padding: 0
            }} 
            component="form"
            onSubmit={handleSubmit}
        >
            <Typography variant="h6">Dados Básicos</Typography>
            <FormControl fullWidth required>
                <InputLabel>Tipo de veículo</InputLabel>
                <Select
                    name="tipo_veiculo"
                    value={veiculo.tipo_veiculo}
                    onChange={handleSelectChange}
                >
                    <MenuItem value="SEMI REBOQUE">Semi Reboque</MenuItem>
                    {/* Adicione outras opções conforme necessário */}
                </Select>
            </FormControl>
            <TextField
                label="Marca"
                name="marca"
                value={veiculo.marca}
                onChange={handleInputChange}
                required
                fullWidth
            />
            <TextField
                label="Modelo"
                name="modelo"
                value={veiculo.modelo}
                onChange={handleInputChange}
                required
                fullWidth
            />
            <TextField
                label="Ano de Fabricação"
                name="ano_fabricacao"
                value={veiculo.ano_fabricacao}
                onChange={handleInputChange}
                required
                fullWidth
            />
            <TextField
                label="Ano Modelo"
                name="ano_modelo"
                value={veiculo.ano_modelo}
                onChange={handleInputChange}
                required
                fullWidth
            />
            <TextField
                label="Cor"
                name="cor"
                value={veiculo.cor}
                onChange={handleInputChange}
                required
                fullWidth
            />
            <TextField
                label="Chassi"
                name="chassi"
                value={veiculo.chassi}
                onChange={handleInputChange}
                required
                fullWidth
            />
            <TextField
                label="Renavam"
                name="renavam"
                value={veiculo.renavam}
                onChange={handleInputChange}
                required
                fullWidth
            />
            <TextField
                label="País"
                name="pais"
                value={veiculo.pais}
                onChange={handleInputChange}
                required
                fullWidth
            />
            <TextField
                label="UF"
                name="uf"
                value={veiculo.uf}
                onChange={handleInputChange}
                required
                fullWidth
            />
            <TextField
                label="Cidade"
                name="cidade"
                value={veiculo.cidade}
                onChange={handleInputChange}
                required
                fullWidth
            />
            <Button type="submit" variant="contained" color="primary">
                Salvar
            </Button>
        </Box>
    );
};

export default NewVeiculoForm;
